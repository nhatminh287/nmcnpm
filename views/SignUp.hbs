<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- JavaScript Bundle with Popper -->
        {{!-- <script src="SignUp.js" type="text/javascript"></script> --}}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
        <link href="/css/SignUp.css" rel="stylesheet">
    </head>
    <body>
        <div class="center">
            <h1>Sign up</h1>
            <form method="post" action="/signup/verify">
                <p id="errorMsg"></p>

                <!-- Name input -->
                <div class="txt_field">
                    <input type="text" id="registerName" name="manv" required>
                    <label for="registerName">Mã nhân viên</label>
                </div>
        
                <!-- Username input -->
                <div class="txt_field">
                    <input type="text" id="registerUsername" name="username" required>
                    <label for="registerUsername">Username</label>
                </div>

                <!-- Email input -->
               {{!--  <div class="txt_field">
                    <input type="text" id="registerEmail" required>
                    <label for="registerEmail">Email</label>
                </div> --}}

                <!-- Password input -->
                <div class="txt_field">
                    <input type="password" id="registerPassword" name="password" required>
                    <label for="registerPassword">Password</label>
                </div>

                <!-- Repeat Password input -->
                <div class="txt_field">
                    <input type="password" id="registerRepeatPassword" required>
                    <label for="registerRepeatPassword">Repeat password</label>
                </div>

                <!-- Checkbox -->
                <div class="checkbox_field">
                    <input type="checkbox" value="" id="registerCheck"/>
                    <label for="registerCheck">
                        I have read and agree to the terms
                    </label>
                </div>
                
                <!-- Submit button -->
                <button id="signup-btn" type="submit">Sign Up</button>
                <div class="login_link">
                    Already have an account? <a href="/">Login</a>
                </div>
            </form>
            <span id="error">{{#with error}}{{this}}{{/with}}</span>
        </div>

        

