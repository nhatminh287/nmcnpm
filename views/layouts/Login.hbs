        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
        <link href="/css/Login.css" rel="stylesheet">
        <link rel="stylesheet" href="css/master.css">
    </head>
    <body>
        <div id="title">
            <img id="logo-img" src="/img/logo_hcmus.png" alt="">
            <div class="title__name">
                <span class="title__name--first">US </span>
                <span class="title__name--second">Canteen</span>
            </div>
        </div> 
        <div class="center">
            <h1>Login</h1>
            <form  method="post" action="/verifyAdmin">
                <p id="errorMsg"></p>

                <!-- Email input -->
                <div class="txt_field">
                    <input type="text" id="loginName" name="Username" required>
                    <label for="loginName">Username</label>
                </div>
        
                <!-- Password input -->
                <div class="txt_field">
                    <input type="password" id="loginPassword" name="Password" required>
                    <label for="loginPassword">Password</label>
                </div>
        
                <!-- Submit button -->
                <button id="login-btn" type="submit">Log in</button>
                <!-- Register buttons -->
                <div class="signup_link">
                    Not a member? <a href="/signup">Sign up</a>
                </div>
            </form>
        </div>
  <!-- Pills content -->
    </body>
</html>